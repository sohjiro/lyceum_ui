<div class="page-header">
  <h1>
    Mail
    <div class="pull-right">
      <button {{action 'send'}} class="btn btn-primary">
        <i class="glyphicon glyphicon-send"></i> Send mail
      </button>
    </div>
  </h1>
</div>

<div class="form">

  <div class="form-group">
    {{ input value=to class="form-control" id="to" placeholder="to" }}
  </div>

  <div class="form-group">
    {{ input value=subject class="form-control" id="subject" placeholder="Subject" }}
  </div>

  <div class="form-group">
    {{ rich-text }}
  </div>

</div>
