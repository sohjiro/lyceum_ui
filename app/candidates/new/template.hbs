<h1> Candidate </h1>

{{#if error}}
  <div id="danger" class="alert alert-danger" role="alert">
    <strong>{{error.code}}</strong> {{ error.message }}
  </div>
{{/if}}

{{#if success}}
  <div id="success" class="alert alert-success" role="alert">
    <strong>Well done!</strong> {{ success.message }}
  </div>
{{/if}}

<div class="form-horizontal">
  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Name</label>
    <div class="col-sm-9">
      {{ input value=name class="form-control" id="name" placeholder="Name" }}
    </div>
  </div>

  <div class="form-group">
    <label for="degree" class="col-sm-3 control-label">Degree</label>
    <div class="col-sm-9">
      {{ input value=degree class="form-control" id="degree" placeholder="Degree" }}
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="col-sm-3 control-label">Email</label>
    <div class="col-sm-9">
      {{ input value=email class="form-control" id="email" placeholder="Email" }}
    </div>
  </div>

  <div class="form-group">
    <label for="telephone" class="col-sm-3 control-label">Telephone</label>
    <div class="col-sm-9">
      {{ input value=telephone class="form-control" id="telephone" placeholder="Telephone" }}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button {{action 'save'}} class="btn btn-primary"> Save </button>
      <button {{action 'cancel'}} class="btn btn-default"> Cancel </button>
    </div>
  </div>
</div>
