<h1> Event </h1>

{{#if error}}
  <div id="danger" class="alert alert-danger" role="alert">
    <strong>{{error.code}}</strong> {{ error.message }}
  </div>
{{/if}}

{{#if success}}
  <div id="success" class="alert alert-success" role="alert">
    <strong>Well done!</strong> {{ success.message }}
  </div>
{{/if}}

<div class="form-horizontal">
  <div class="form-group">
    <label for="type" class="col-sm-2 control-label">Type</label>
    <div class="col-sm-10">
      {{#x-select value=type_id action="selectType" as |xs|}}
        {{#each types as |type|}}
          {{#xs.option value=type.id}} {{type.name}} {{/xs.option}}
        {{/each}}
      {{/x-select}}
    </div>
  </div>

  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{ input value=name class="form-control" id="name" placeholder="Name" }}
    </div>
  </div>

  <div class="form-group">
    <label for="starting_date" class="col-sm-2 control-label">Starting Date</label>
    <div class="col-sm-10">
      {{ input type="date" value=starting_date class="form-control" id="starting_date" placeholder="Starting date" }}
    </div>
  </div>

  <div class="form-group">
    <label for="campus" class="col-sm-2 control-label">Campus</label>
    <div class="col-sm-10">
      {{ input value=campus class="form-control" id="campus" placeholder="Campus" }}
    </div>
  </div>

  <div class="form-group">
    <label for="quorum" class="col-sm-2 control-label">Quorum</label>
    <div class="col-sm-10">
      {{ input type="number" min="1" step="1" value=quorum class="form-control" id="quorum" placeholder="Quorum" }}
    </div>
  </div>

  <div class="form-group">
    <label for="price" class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
      {{ input type="number" value=price class="form-control" id="price" placeholder="Price" }}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button {{action 'addNew'}} class="btn btn-primary"> Save </button>
      <button {{action 'cancel'}} class="btn btn-default"> Cancel </button>
    </div>
  </div>

</div>
