<h1> Form </h1>

{{#if success}}
  <div id="success" class="alert alert-success" style="display: none" role="alert">
    <strong>Well done!</strong> {{ success }}
  </div>
{{/if}}

{{#if error}}
  <div id="danger" class="alert alert-danger" role="alert">
    <strong>Oh snap!</strong> {{ error }}
  </div>
{{/if}}

{{ message }}
<div class="form-horizontal">
  <div class="form-group">
    <label for="type" class="col-sm-2 control-label">Type</label>
    <div class="col-sm-10">
      {{ input value=type class="form-control" id="type" placeholder="Type" }}
    </div>
  </div>

  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{ input value=name class="form-control" id="name" placeholder="Name" }}
    </div>
  </div>

  <div class="form-group">
    <label for="starting_date" class="col-sm-2 control-label">Starting Date</label>
    <div class="col-sm-10">
      {{ input value=starting_date class="form-control" id="starting_date" placeholder="Starting Date" }}
    </div>
  </div>

  <div class="form-group">
    <label for="campus" class="col-sm-2 control-label">Campus</label>
    <div class="col-sm-10">
      {{ input value=campus class="form-control" id="campus" placeholder="Campus" }}
    </div>
  </div>

  <div class="form-group">
    <label for="quorum" class="col-sm-2 control-label">Quorum</label>
    <div class="col-sm-10">
      {{ input value=quorum class="form-control" id="quorum" placeholder="Campus" }}
    </div>
  </div>

  <div class="form-group">
    <label for="price" class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
      {{ input value=price class="form-control" id="price" placeholder="Campus" }}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button {{action 'addNew'}} class="btn btn-primary"> Add </button>
      {{#link-to 'event' class="btn btn-default"}} Cancel {{/link-to}}
    </div>
  </div>

</div>
