<div class="page-header">
  <h1>
    Mail
    <div class="pull-right">
      <button {{action 'send'}} class="btn btn-primary">
        <i class="glyphicon glyphicon-send"></i> Send mail
      </button>
    </div>
  </h1>
</div>

<div class="form">

  <div class="form-group">
    {{#power-select-multiple
      placeholder="To..."
      options=model.records
      selected=candidates
      onchange=(action (mut candidates)) as |record|}}
      {{ record.candidate.name }} - {{ get record.recordStatusSorted 'firstObject.status.name' }}
    {{/power-select-multiple}}
  </div>

  <div class="form-group">
    {{ input value=subject class="form-control" id="subject" placeholder="Subject" }}
  </div>

  <div class="form-group">
    {{ rich-text value=data }}
  </div>

</div>
