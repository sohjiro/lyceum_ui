<h1> Candidate </h1>

<div class="form-horizontal">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-9 col-md-offset-1">
      {{ input value=name class="form-control" id="name" placeholder="Name" }}
    </div>
  </div>

  <div class="form-group">
    <label for="degree" class="col-sm-2 control-label">Degree</label>
    <div class="col-sm-9 col-md-offset-1">
      {{ input value=degree class="form-control" id="degree" placeholder="Degree" }}
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-9 col-md-offset-1">
      {{ input value=email class="form-control" id="email" placeholder="email" }}
    </div>
  </div>

  <div class="form-group">
    <label for="telephone" class="col-sm-2 control-label">Telephone</label>
    <div class="col-sm-9 col-md-offset-1">
      {{ input value=telephone class="form-control" id="telephone" placeholder="telephone" }}
    </div>
  </div>

  <div class="form-group">
    <label for="observations" class="col-sm-2 control-label">Observations</label>
    <div class="col-sm-9 col-md-offset-1">
      {{ textarea value=observations rows="5" class="form-control" id="observations" placeholder="observations" }}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button {{action 'addNew'}} class="btn btn-primary"> Add </button>
      <button {{action 'cancel'}} class="btn btn-default"> Cancel </button>
    </div>
  </div>

</div>
