<div class="page-header">
  <h1> Add candidate </h1>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="form-horizontal">
      <div class="form-group">
        <label for="candidate" class="col-sm-3 control-label">Candidate</label>
        <div class="col-sm-7">
          {{#power-select
            class="form-control"
            placeholder="Search candidate..."
            search=(perform search)
            selected=selected
            onchange=(action (mut selected))
            as |candidate|}}
            {{ candidate.name }}
          {{/power-select}}
        </div>
      </div>
      <div class="form-group">
        <label for="status" class="col-sm-3 control-label">Status</label>
        <div class="col-sm-7">
          <!-- extern to a view or a service -->
          {{#power-select
            searchEnabled=false
            options=statuses
            selected=status
            onchange=(action (mut status)) as |status|}}
            {{ status.name }}
          {{/power-select}}
        </div>
      </div>
    </div>
  </div>
</div>
