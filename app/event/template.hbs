<div class="page-header">
  <h1>{{ model.name }} <small>{{ model.campus }}</small></h1>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover table-strip">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Degree</th>
            <th>Email</th>
            <th>Telephone</th>
            <th>Status</th>
            <th>Observations</th>
            <th />
          </tr>
        </thead>
        <tbody>
          {{#each model.candidates as |candidate|}}
            <tr>
              <td>{{ candidate.id }}</td>
              <td>{{ candidate.name }}</td>
              <td>{{ candidate.degree }}</td>
              <td>{{ candidate.email }}</td>
              <td>{{ candidate.telephone }}</td>
              <td>{{ candidate.status.name }}</td>
              <td>{{ candidate.observations }}</td>
              <td>{{#link-to 'event.candidate' candidate}} Edit {{/link-to}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{#link-to 'events' class="btn btn-default"}}
        <span class="glyphicon glyphicon-circle-arrow-left"></span>
      {{/link-to}}
      {{#link-to 'event.candidates' class="btn btn-primary"}} Add {{/link-to}}
    </div>
    <div class="col-md-4">
      {{outlet}}
    </div>
  </div>
</div>
